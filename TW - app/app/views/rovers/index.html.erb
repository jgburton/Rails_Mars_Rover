<h1> Mars Rover Remote Control - TW </h1>
<%= flash[:error]%>
<hr />

<%= form_tag("/rovers/move") do %>
  <fieldset>
    <legend> Plateau's Parameters </legend>

    <p>
      <%= label_tag :plateau_corner %>:
      <%= text_field_tag :plateau_corner, params[:plateau_corner] %> MAX: 5 5
    </p>

  </fieldset>

  <fieldset>
    <legend> Rover's Movement </legend>

    <div id="rover_move">

      <div class="rover_command">
        <p>
          <%= label_tag :current_position %>:
          <%= text_field_tag :current_position, params[:current_position] %> e.g: 1 2 N
        </p>

        <p>
          <%= label_tag :move_command %>:
          <%= text_field_tag :commands, params[:commands] %> example: LMLMLMM
        </p>
      </div>
    </div>

  </fieldset>

  <%= submit_tag "Submit" %>
<% end %>
<br />
<%= render :partial => "result" unless @rover.blank? %>
